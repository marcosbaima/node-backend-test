{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                   
    "allowJs": true,                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "baseUrl": "./src",                       
    "paths": {
        "@modules/*":["modules/*"],
        "@shared/*":["shared/*"],
        "@config/*":["config/*"]
    },                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,         
    "forceConsistentCasingInFileNames": true  
  }
}
